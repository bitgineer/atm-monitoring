# Database
DATABASE_PATH=./data/review_system.db

# Blockchain APIs
MEMPOOL_API_KEY=your_mempool_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here
BLOCKCHAIR_API_KEY=your_blockchair_api_key_here

# Communication APIs
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
ZENDESK_API_TOKEN=your_zendesk_api_token_here
ZENDESK_SUBDOMAIN=your_zendesk_subdomain_here

# Link Shortening APIs
DUB_API_KEY=your_dub_api_key_here
BITLY_ACCESS_TOKEN=your_bitly_access_token_here

# Application Configuration
PORT=3000
NODE_ENV=development
CLIENT_URL=http://localhost:3000

# Security
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
ENCRYPTION_KEY=your_encryption_key_here_32_characters

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=60000

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
